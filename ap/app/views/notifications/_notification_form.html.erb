<%@notification = Notification.new%>
<%= form_for([@notification], remote: true) do |f| %>
  <%= f.label :message, "Add a note." %><br />
  <%= f.text_area :message, style:'resize:none; width: 88%; height: 50px;'%><br />
  <%= f.hidden_field :user_notified, value: 0 %>
  <%= f.hidden_field :created_by_admin, value: true%>
  <%= f.label :link %><br>
  <%= f.text_field :link %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit 'Save' , class: 'btn btn-default'%>
<% end %>

<script>
	$("#new_notification").bind("ajax:complete", function(event, xhr, status) {
		$("#notification_message").val('');
		$("#notifications_box").load('home/index #notifications_box');
	});

</script>
