<%@notification = Notification.new%>
<%= form_for([@notification], remote: true) do |f| %>
  <%= label :message, "Add a note." %><br />
  <%= f.text_area :message %><br />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit 'Save' %>
<% end %>

<script>
	$("#new_notification").bind("ajax:complete", function(event, xhr, status) {
		$("#notification_message").val('');
		$('#notifications_box').load('home/index #notifications_box');
	});

</script>
