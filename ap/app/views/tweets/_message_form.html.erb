<%@tweet = Tweet.new%>
<%= form_for([@tweet], remote: true) do |f| %>
  <%= label :message, "What are you doing?" %><br />
  <%= f.text_area :message %><br />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit 'Save' %>
<% end %>

<script>
	$("#new_tweet").bind("ajax:complete", function(event, xhr, status) {
		$("#tweet_message").val('');
		$('#tweets_box').load('home/index #tweets_box');
	});

</script>