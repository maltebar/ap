<%@tweet = Tweet.new%>
<%= form_for([@tweet], remote: true) do |f| %>
  <%= label :message, "What are you doing?" %><br />
  <%= f.text_area :message %><br />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit 'Save' %>
<% end %>

<%@tweets = Tweet.all.order('created_at DESC')%>
<% @tweets.each do |tweet|%>
	<%= div_for tweet do%>
		<p><%= tweet.message %></p>
		<p>Posted <%= time_ago_in_words(tweet.created_at) %> ago by <%=tweet.user.nickname%></p>
	<%end%>
<%end%>


